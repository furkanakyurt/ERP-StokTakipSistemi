@model DaimaProje2.Models.StokModel2

@{
    ViewBag.Title = "StokEY";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2 style="margin-left:30px">Üretim Ekle / Düzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.StokNo)


    <div class="form-horizontal col col-md-4">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <b>@Html.Label("Ürün Adı ", new { @class = "control-label col-md-2" })</b>
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.UrunNo, (List<SelectListItem>)ViewBag.urun, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UrunNo, "", new { @class = "text-danger" })
            <br />
        </div>
        @Html.LabelFor(model => model.Miktar, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Miktar, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.Miktar, "", new { @class = "text-danger" })
            <br />
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-10 col-md-4">
                <input type="submit" value="Save" class="btn btn-info" style="width:80px" />
            </div>
        </div>
    </div>
}
<br />
<br />
<div class="col col-md-10" style="margin-left:20px; margin-top:20px">
    @Html.ActionLink("Geri Dön", "Index")
</div>
