@model DaimaProje2.Models.UrunModel

@{
    ViewBag.Title = "UrunEY";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<h2>Kullanıcı Ekle veya Düzenle</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.UrunNo)

    <div class="form-horizontal col col-md-6">
        <br />
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <b>@Html.LabelFor(model => model.UrunAdi, htmlAttributes: new { @class = "control-label col-md-2" })</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UrunAdi, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.UrunAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Kaydet" class="btn btn-info" />
            </div>
        </div>
    </div>
}
<div class="col col-md-10" style="margin-left:20px; margin-top:20px">
    @Html.ActionLink("Geri Dön", "Index")
</div>


<style>
    .form-control-dropdown {
        width: 500px;
        height: 35px;
        border-radius: 5px;
    }
</style>
